<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
            padding: 20px;
            background-color: #f0f2f5;
            margin: 0;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            text-align: center;
        }

        .home-button {
            position: absolute;
            top: 20px;
            left: 20px;
        }

        .form-container {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 10px;
            font-weight: bold;
        }

        input[type="text"] {
            width: calc(100% - 24px);
            max-width: 400px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-bottom: 10px;
        }

        button {
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            background-color: #007BFF;
            color: white;
            cursor: pointer;
        }

        button:hover {
            background-color: #0056b3;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        a {
            text-decoration: none;
            color: #007BFF;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>
    <div class="home-button">
        <button onclick="location.href='/'">Home</button>
    </div>
    <div class="container">
        <h1>URL Shortener</h1>
        <div class="form-container">
            <form action="/url" method="post">
                <label for="url-input">Enter URL here</label>
                <input type="text" id="url-input" name="url" placeholder="https://example.com" required>
                <button type="submit">Generate</button>
            </form>
        </div>
        
        <% if (locals.id) { %>
            <p>URL Generated: <a href="http://localhost:8000/url/<%= id %>" target="_blank"><%= id %></a></p>
        <% } %>

        <% if (locals.urls && locals.urls.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>SL No</th>
                        <th>Short ID</th>
                        <th>Redirect URL</th>
                        <th>Clicks</th>
                    </tr>
                </thead>
                <tbody>
                    <% urls.forEach((url, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td>
                                <a href="<%= `http://localhost:8000/url/${url.shortId}` %>" target="_blank">
                                    <%= url.shortId %>
                                </a>
                            </td>
                            <td><%= url.redirectURL %></td>
                            <td><%= url.visitHistory.length %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p>No URLs generated yet.</p>
        <% } %>
    </div>
</body>

</html>