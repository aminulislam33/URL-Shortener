<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
            padding: 20px;
            background-color: #f0f2f5;
            margin: 0;
            position: relative; 
        }

        .navbar {
            background-color: #007BFF;
            color: white;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .navbar-brand {
            display: flex;
            align-items: center;
            color: white;
            text-decoration: none;
        }

        .navbar-brand img {
            height: 30px; 
            margin-right: 10px;
        }

        .navbar-brand span {
            font-weight: bold;
        }

        .logout-button {
            position: relative;
        }

        .logout-button .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
            right: 0;
        }

        .logout-button:hover .dropdown-content {
            display: block;
        }

        .dropdown-item {
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            color: #333;
        }

        .dropdown-item:hover {
            background-color: #f1f1f1;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        .form-container {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 10px;
            font-weight: bold;
        }

        input[type="text"] {
            width: calc(100% - 24px);
            max-width: 400px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-bottom: 10px;
        }

        button {
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            background-color: #007BFF;
            color: white;
            cursor: pointer;
        }

        button:hover {
            background-color: #0056b3;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        a {
            text-decoration: none;
            color: #007BFF;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>
    <div class="navbar">
        <a class="navbar-brand" href="/">
            
            <span>Home</span>
        </a>
        <div class="logout-button">
            <span><%= name %></span> 
            <div class="dropdown-content">
                <a class="dropdown-item" href="/user/profile">Profile</a>
                <form action="/user/logout" method="get">
                    <button type="submit" class="dropdown-item">Logout</button>
                </form>
            </div>
        </div>
    </div>
    <div class="container">
        <h1>URL Shortener</h1>
        <div class="form-container">
            <form action="/url" method="post">
                <label for="url-input">Enter URL here</label>
                <input type="text" id="url-input" name="url" placeholder="https://example.com" required>
                <button type="submit">Generate</button>
            </form>
        </div>
        
        <% if (locals.id) { %>
            <p>URL Generated: <a href="http://localhost:8000/url/<%= id %>" target="_blank"><%= id %></a></p>
        <% } %>

        <% if (locals.urls && locals.urls.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>SL No</th>
                        <th>Short ID</th>
                        <th>Redirect URL</th>
                        <th>Clicks</th>
                    </tr>
                </thead>
                <tbody>
                    <% urls.forEach((url, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td>
                                <a href="<%= `${BASE_URL}/url/${url.shortId}` %>" target="_blank">
                                    <%= url.shortId %>
                                </a>
                            </td>
                            <td><%= url.redirectURL %></td>
                            <td><%= url.visitHistory.length %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p>No URLs generated yet.</p>
        <% } %>
    </div>
</body>

</html>